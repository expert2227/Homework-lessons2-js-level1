alert('Меня зовут волшебник Галактикус и я буду колдовать с вашими числами');
var num1 = + prompt ('введите первое число!');
var num2 = + prompt ('введите второе число!');
if (num1 > 0 && num2 > 0) {
    alert( 'ваши числа мой юный друг оказались больше нуля, поэтому я вычел их разность!' num1 - num2)
}; else if (num1 < 0 && num2 < 0) {
    alert('поскольку ваши числа были меньше нуля, я решил их умножить!' num1 * num2) 
}; else ((num1 < 0 && num2 > 0) || (num1 > 0 && num2 < 0)) {
    alert('Вы оказались очень умны и решили указать числа разных знаков, но я все равно справился! и сложил их' num1 + num2)
};
